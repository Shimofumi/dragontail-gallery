---
import "../styles/style.css";
export interface Props {
	title: string;
	description?: string;
	image?: string;
	url?: string;
}

const { title, description, image, url } = Astro.props;

// サイトの基本情報
const siteName = "Dragontail";
const siteUrl = "https://dragontail.monster";
const defaultDescription = "ドラゴンガールとケモミミが好きな絵描き、しもふみさんによるイラストサイト。オリジナルも二次創作も。全年齢から成人向けまで。";
const defaultImage = `${siteUrl}/yakinasu_ogp.png`; // デフォルト画像

// ページごとの情報（なければデフォルトを使用）
const pageDescription = description || defaultDescription;
const pageImage = image ? `${siteUrl}${image}` : defaultImage;
const pageUrl = url ? `${siteUrl}${url}` : siteUrl;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{`Dragontail - ${title}`}</title>
		<!-- OGP Meta Tags -->
		<meta property="og:site_name" content={siteName} />
		<meta property="og:title" content={`${siteName} - ${title}`} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:image" content={pageImage} />
		
	</head>
	<body>
		<header>
			<h1><a href="/gallery/1">Dragontail</a></h1>
			<div id="test">
				<p><a href="/gallery/1">[新着]</a></p>
				<p><a href="/tags">[タグ一覧]</a></p>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p><a href="/">index</a></p>
			<p>©2025 しもふみ</p>
		</footer>
	</body>
</html>